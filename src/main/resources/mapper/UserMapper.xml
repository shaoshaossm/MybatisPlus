<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssm.mybatis_plus.mapper.UserMapper">

    <select id="selectMapById" resultType="map">
        select id,name,age,email from user where id = #{id}
    </select>
    <select id="selectPageVo" resultType="com.ssm.mybatis_plus.pojo.User">
        select id,name,age,email from user where age> #{age}
    </select>
     <select id="selectAllOrderByAgeDesc" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from user
        order by age desc
    </select>
    <insert id="insertSelective">
        insert into user
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="age != null">age,</if>
            <if test="email != null">email,</if>
            <if test="sex != null">sex,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="isDeleted != null">is_deleted,</if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id,jdbcType=NUMERIC},</if>
            <if test="name != null">#{name,jdbcType=VARCHAR},</if>
            <if test="age != null">#{age,jdbcType=NUMERIC},</if>
            <if test="email != null">#{email,jdbcType=VARCHAR},</if>
            <if test="sex != null">#{sex},</if>
            <if test="createTime != null">#{createTime,jdbcType=TIMESTAMP},</if>
            <if test="updateTime != null">#{updateTime,jdbcType=TIMESTAMP},</if>
            <if test="isDeleted != null">#{isDeleted,jdbcType=NUMERIC},</if>
        </trim>
    </insert>
    <delete id="deleteByIdAndUserName">
        delete
        from user
        where id = #{id,jdbcType=NUMERIC}
    </delete>
    <update id="updateAgeAndSexById">
        update user
        set age = #{age,jdbcType=NUMERIC},
            sex = #{sex}
        where id = #{id,jdbcType=NUMERIC}
    </update>
    <select id="selectAllByAgeanAndSex" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from user
        where
        age = #{age,jdbcType=NUMERIC}
    </select>
</mapper>